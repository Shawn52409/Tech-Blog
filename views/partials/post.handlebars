<div class="post">
    
    <div class="card-header">
        <h3><a href="/post/{{id}}" class="card-title text-primary">{{post_title}}</a></h3>
    </div>
    
    <div class="card-body">
        <p>{{post_content}}</p>
    </div>            

    <div class="card-footer bg-light">Created by {{user.username}} on {{format_date post_timestamp}}
    </div>

</div>
<div class="row">
  <div class="col-md-3 m-4">
    <h2>Login</h2>          
    <form class="form login-form">
      <div class="form-group">
        <label for="user-login">User Name:</label>
        <input class="form-input" type="text" id="name-login">
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login">
      </div>
      <div class="form-group">
        <button class="btn btn-success" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-3 m-4">
    <h2>Signup</h2>          
    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">User Name:</label>
        <input type="text" id="name-signup">
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input type="password" id="password-signup">
      </div>
      <div class="form-group">
        <button class="btn btn-success" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>          
<script src="./js/login.js"></script>
